<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dlsu.wirtec.tokhangapp.activities.MainActivity"
    android:id="@+id/container_superParent"
    android:background="@drawable/background_menu3">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:paddingTop="15dp"
        android:src="@drawable/menu_header"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="?android:selectableItemBackground"
        android:src="@mipmap/menu_button_continue"
        android:layout_centerInParent="true"
        android:clickable="false" />

    <ImageButton
        android:id="@+id/btn_startGame"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="?android:selectableItemBackground"
        android:layout_centerInParent="true"
        android:src="@mipmap/menu_button_start"
        android:layout_below="@+id/btn_continue"/>

    <ImageButton
        android:id="@+id/btn_leaderboard"
        android:paddingTop="10dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="?android:selectableItemBackground"
        android:layout_centerInParent="true"
        android:src="@mipmap/menu_button_score"
        android:layout_below="@+id/btn_startGame"/>
</RelativeLayout>