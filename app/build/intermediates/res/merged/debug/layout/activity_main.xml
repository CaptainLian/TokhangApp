<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_super_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dlsu.wirtec.tokhangapp.MainActivity"
    android:background="@drawable/background_tokhang2">
    <Button
        android:id="@+id/btn_leaderboard"
        android:text="Leader Boards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn_start_new_game"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_start_new_game"
        android:text="Start New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_leaderboard"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_continue"
        android:text="Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_start_new_game"
        android:layout_alignEnd="@+id/btn_start_new_game"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_title"
        android:text="@string/app_name"
        android:textSize="35sp"
        android:textColor="#407bc4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_continue"
        android:layout_alignParentStart="true" />

</RelativeLayout>
