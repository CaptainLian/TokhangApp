<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dlsu.wirtec.tokhangapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_t"
        android:label="@string/app_name_short"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="dlsu.wirtec.tokhangapp.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dlsu.wirtec.tokhangapp.LeaderboardActivity"
            android:label="@string/title_activity_leaderboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="dlsu.wirtec.tokhangapp.GameMapActivity"
            android:label="@string/title_activity_game_map"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>